// INVOICE PLUGIN
// =====================================

model Invoice {
  id              String    @id @default(cuid())
  userId          String
  clientId        String?
  invoiceNumber   String
  clientName      String?
  clientEmail     String?
  clientAddress   String?   @db.Text
  status          String    @default("draft") // draft, sent, paid, overdue, cancelled
  issueDate       DateTime  @default(now())
  dueDate         DateTime?
  subtotal        Float     @default(0)
  taxRate         Float     @default(0)
  taxAmount       Float     @default(0)
  discount        Float?
  total           Float     @default(0)
  currency        String    @default("USD")
  notes           String?   @db.Text
  terms           String?   @db.Text
  isRecurring     Boolean   @default(false)
  recurringPeriod String?
  paidAt          DateTime?
  paidDate        DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  client   InvoiceClient?   @relation(fields: [clientId], references: [id], onDelete: SetNull)
  items    InvoiceItem[]
  payments InvoicePayment[]

  @@index([userId])
  @@index([clientId])
  @@index([status])
  @@index([invoiceNumber])
  @@map("invoice_invoices")
  @@schema("public")
}

model InvoiceClient {
  id        String   @id @default(cuid())
  userId    String
  name      String
  company   String?
  email     String?
  phone     String?
  address   String?  @db.Text
  notes     String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  invoices Invoice[]

  @@index([userId])
  @@map("invoice_clients")
  @@schema("public")
}

model InvoiceItem {
  id          String   @id @default(cuid())
  invoiceId   String
  description String
  quantity    Float    @default(1)
  unitPrice   Float
  amount      Float
  createdAt   DateTime @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
  @@map("invoice_items")
  @@schema("public")
}

model InvoicePayment {
  id            String   @id @default(cuid())
  invoiceId     String
  amount        Float
  method        String?
  paymentMethod String?
  reference     String?
  notes         String?
  paymentDate   DateTime @default(now())
  paidAt        DateTime @default(now())
  createdAt     DateTime @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
  @@index([paymentDate])
  @@map("invoice_payments")
  @@schema("public")
}

