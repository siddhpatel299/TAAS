// =====================================
// JOB TRACKER PLUGIN
// =====================================

model JobApplication {
  id             String    @id @default(cuid())
  userId         String
  company        String
  jobTitle       String
  location       String?
  employmentType String?   // full-time, part-time, contract, internship, remote
  salaryMin      Int?
  salaryMax      Int?
  salaryCurrency String?   @default("USD")
  salaryPeriod   String?   @default("year") // hour, month, year
  jobUrl         String?
  jobDescription String?   @db.Text
  status         String    @default("wishlist") // wishlist, applied, interview, offer, rejected, accepted, withdrawn
  priority       String    @default("medium") // low, medium, high
  rating         Int?      // 1-5 stars
  appliedDate    DateTime?
  notes          String?   @db.Text
  source         String?   // linkedin, indeed, company website, referral, etc.
  sourceUrl      String?   // Job posting URL
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  documents JobDocument[]
  tasks     JobTask[]
  referrals JobReferral[]
  activities JobActivity[]

  @@index([userId])
  @@index([status])
  @@index([company])
  @@index([createdAt])
  @@map("jt_applications")
  @@schema("public")
}

model JobDocument {
  id               String   @id @default(cuid())
  jobApplicationId String
  fileId           String   // Reference to TAAS File.id
  documentType     String   // resume, cover_letter, job_description, offer_letter, contract, other
  label            String?  // Custom label
  createdAt        DateTime @default(now())

  jobApplication JobApplication @relation(fields: [jobApplicationId], references: [id], onDelete: Cascade)

  @@index([jobApplicationId])
  @@index([fileId])
  @@map("jt_documents")
  @@schema("public")
}

model JobTask {
  id               String    @id @default(cuid())
  jobApplicationId String
  title            String
  description      String?   @db.Text
  dueDate          DateTime?
  priority         String    @default("medium") // low, medium, high
  status           String    @default("pending") // pending, completed
  completedAt      DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  jobApplication JobApplication @relation(fields: [jobApplicationId], references: [id], onDelete: Cascade)

  @@index([jobApplicationId])
  @@index([dueDate])
  @@index([status])
  @@map("jt_tasks")
  @@schema("public")
}

model JobReferral {
  id               String    @id @default(cuid())
  jobApplicationId String?   // Optional - can be general referral
  userId           String
  name             String
  role             String?
  company          String?
  email            String?
  phone            String?
  linkedinUrl      String?
  messageSent      String?   @db.Text // Message content sent
  messageSentDate  DateTime?
  followUpDate     DateTime?
  status           String    @default("pending") // pending, contacted, responded, archived
  notes            String?   @db.Text
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  jobApplication JobApplication? @relation(fields: [jobApplicationId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([jobApplicationId])
  @@index([status])
  @@map("jt_referrals")
  @@schema("public")
}

model JobActivity {
  id               String   @id @default(cuid())
  jobApplicationId String
  action           String   // created, status_changed, document_added, task_completed, etc.
  description      String
  metadata         Json?    // Additional data like old/new status
  createdAt        DateTime @default(now())

  jobApplication JobApplication @relation(fields: [jobApplicationId], references: [id], onDelete: Cascade)

  @@index([jobApplicationId])
  @@index([createdAt])
  @@map("jt_activities")
  @@schema("public")
}

// =====================================
// PASSWORD VAULT PLUGIN
// =====================================

model PasswordEntry {
  id             String    @id @default(cuid())
  userId         String
  name           String    // e.g., "Google Account", "Work Email"
  username       String?   // Email, username, or identifier
  password       String    @db.Text // Encrypted password
  url            String?   // Website or service URL
  notes          String?   @db.Text // Additional notes (encrypted)
  category       String?   // social, work, finance, shopping, entertainment, etc.
  tags           String[]  // Custom tags for organization
  isFavorite     Boolean   @default(false)
  lastUsedAt     DateTime?
  passwordStrength String?  // weak, fair, good, strong
  customFields   Json?     // Additional custom fields (encrypted)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([userId])
  @@index([category])
  @@index([isFavorite])
  @@index([name])
  @@map("pv_passwords")
  @@schema("public")
}

model PasswordCategory {
  id          String   @id @default(cuid())
  userId      String
  name        String   @unique // e.g., "Social Media", "Work", "Finance"
  color       String?  // Hex color code
  icon        String?  // Icon name
  position    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@map("pv_categories")
  @@schema("public")
}

model PasswordSecurityEvent {
  id          String   @id @default(cuid())
  userId      String
  eventType   String   // login_failed, password_exported, master_key_changed, etc.
  ipAddress   String?
  userAgent   String?
  metadata    Json?    // Additional event data
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([eventType])
  @@index([createdAt])
  @@map("pv_security_events")
  @@schema("public")
}

// =====================================
// INVOICE GENERATOR PLUGIN
// =====================================

model InvoiceClient {
  id           String    @id @default(cuid())
  userId       String
  name         String
  email        String?
  phone        String?
  company      String?
  address      String?   @db.Text
  city         String?
  state        String?
  country      String?
  postalCode   String?
  taxId        String?   // VAT/Tax ID
  notes        String?   @db.Text
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  invoices Invoice[]

  @@index([userId])
  @@index([name])
  @@map("inv_clients")
  @@schema("public")
}

model Invoice {
  id              String    @id @default(cuid())
  userId          String
  clientId        String?
  invoiceNumber   String    // e.g., INV-001
  status          String    @default("draft") // draft, sent, paid, overdue, cancelled
  issueDate       DateTime  @default(now())
  dueDate         DateTime?
  paidDate        DateTime?
  subtotal        Decimal   @db.Decimal(12, 2)
  taxRate         Decimal?  @db.Decimal(5, 2)
  taxAmount       Decimal?  @db.Decimal(12, 2)
  discount        Decimal?  @db.Decimal(12, 2)
  total           Decimal   @db.Decimal(12, 2)
  currency        String    @default("USD")
  notes           String?   @db.Text
  terms           String?   @db.Text
  isRecurring     Boolean   @default(false)
  recurringPeriod String?   // weekly, monthly, quarterly, yearly
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  client InvoiceClient? @relation(fields: [clientId], references: [id], onDelete: SetNull)
  items  InvoiceItem[]
  payments InvoicePayment[]

  @@unique([userId, invoiceNumber])
  @@index([userId])
  @@index([clientId])
  @@index([status])
  @@index([dueDate])
  @@map("inv_invoices")
  @@schema("public")
}

model InvoiceItem {
  id          String   @id @default(cuid())
  invoiceId   String
  description String
  quantity    Decimal  @db.Decimal(10, 2)
  unitPrice   Decimal  @db.Decimal(12, 2)
  amount      Decimal  @db.Decimal(12, 2)
  createdAt   DateTime @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
  @@map("inv_items")
  @@schema("public")
}

model InvoicePayment {
  id            String   @id @default(cuid())
  invoiceId     String
  amount        Decimal  @db.Decimal(12, 2)
  paymentDate   DateTime @default(now())
  paymentMethod String?  // cash, bank_transfer, credit_card, paypal, etc.
  reference     String?  // Transaction reference
  notes         String?
  createdAt     DateTime @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
  @@map("inv_payments")
  @@schema("public")
}

// =====================================
// SUBSCRIPTION TRACKER PLUGIN
// =====================================

model Subscription {
  id              String    @id @default(cuid())
  userId          String
  name            String    // e.g., "Netflix", "Spotify"
  description     String?
  category        String?   // entertainment, productivity, utilities, etc.
  amount          Decimal   @db.Decimal(12, 2)
  currency        String    @default("USD")
  billingCycle    String    @default("monthly") // weekly, monthly, quarterly, yearly
  startDate       DateTime
  nextBillingDate DateTime?
  endDate         DateTime? // For cancelled subscriptions
  status          String    @default("active") // active, paused, cancelled, trial
  autoRenew       Boolean   @default(true)
  reminderDays    Int       @default(3) // Days before billing to remind
  website         String?
  notes           String?   @db.Text
  color           String?   // For UI display
  icon            String?   // Icon name
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  payments SubscriptionPayment[]

  @@index([userId])
  @@index([status])
  @@index([nextBillingDate])
  @@index([category])
  @@map("sub_subscriptions")
  @@schema("public")
}

model SubscriptionPayment {
  id             String   @id @default(cuid())
  subscriptionId String
  amount         Decimal  @db.Decimal(12, 2)
  paymentDate    DateTime @default(now())
  status         String   @default("completed") // completed, failed, pending
  notes          String?
  createdAt      DateTime @default(now())

  subscription Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  @@index([subscriptionId])
  @@index([paymentDate])
  @@map("sub_payments")
  @@schema("public")
}

// =====================================
// INVESTMENT PORTFOLIO PLUGIN
// =====================================

model Investment {
  id            String    @id @default(cuid())
  userId        String
  symbol        String    // e.g., "AAPL", "BTC"
  name          String    // e.g., "Apple Inc.", "Bitcoin"
  type          String    // stock, crypto, etf, mutual_fund, bond, real_estate, other
  quantity      Decimal   @db.Decimal(18, 8) // High precision for crypto
  avgCostBasis  Decimal   @db.Decimal(18, 8) // Average purchase price
  currentPrice  Decimal?  @db.Decimal(18, 8) // Last known price
  currency      String    @default("USD")
  exchange      String?   // NYSE, NASDAQ, Binance, etc.
  sector        String?   // Technology, Healthcare, etc.
  notes         String?   @db.Text
  isWatchlist   Boolean   @default(false) // If true, not owned, just watching
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  transactions InvestmentTransaction[]
  dividends    InvestmentDividend[]

  @@index([userId])
  @@index([symbol])
  @@index([type])
  @@index([isWatchlist])
  @@map("inv_investments")
  @@schema("public")
}

model InvestmentTransaction {
  id           String   @id @default(cuid())
  investmentId String
  type         String   // buy, sell, transfer_in, transfer_out
  quantity     Decimal  @db.Decimal(18, 8)
  pricePerUnit Decimal  @db.Decimal(18, 8)
  totalAmount  Decimal  @db.Decimal(18, 8)
  fees         Decimal? @db.Decimal(12, 2)
  date         DateTime @default(now())
  notes        String?
  createdAt    DateTime @default(now())

  investment Investment @relation(fields: [investmentId], references: [id], onDelete: Cascade)

  @@index([investmentId])
  @@index([date])
  @@index([type])
  @@map("inv_transactions")
  @@schema("public")
}

model InvestmentDividend {
  id           String   @id @default(cuid())
  investmentId String
  amount       Decimal  @db.Decimal(12, 2)
  date         DateTime @default(now())
  isReinvested Boolean  @default(false)
  notes        String?
  createdAt    DateTime @default(now())

  investment Investment @relation(fields: [investmentId], references: [id], onDelete: Cascade)

  @@index([investmentId])
  @@index([date])
  @@map("inv_dividends")
  @@schema("public")
}

// =====================================
// BILL REMINDERS PLUGIN
