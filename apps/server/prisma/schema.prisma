// =====================================
// INVESTMENT TRACKER PLUGIN
// =====================================

model Investment {
  id            String    @id @default(cuid())
  userId        String
  clientId      String?
  name          String
  type          String    // stocks, bonds, mutual_funds, crypto, real_estate, etc.
  symbol        String?
  sector        String?
  exchange      String?
  currency      String    @default("USD")
  quantity      Float     @default(0)
  purchasePrice Float?
  currentPrice  Float?
  avgCostBasis  Float?
  purchaseDate  DateTime  @default(now())
  isWatchlist   Boolean   @default(false)
  notes         String?   @db.Text
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  client       InvestmentClient?       @relation(fields: [clientId], references: [id], onDelete: SetNull)
  transactions InvestmentTransaction[]
  dividends    InvestmentDividend[]

  @@index([userId])
  @@index([clientId])
  @@index([type])
  @@index([sector])
  @@index([isWatchlist])
  @@map("inv_investments")
  @@schema("public")
}

model InvestmentTransaction {
  id           String   @id @default(cuid())
  investmentId String
  type         String   // buy, sell
  quantity     Float
  price        Float?
  pricePerUnit Float?
  totalAmount  Float?
  fees         Float    @default(0)
  date         DateTime @default(now())
  notes        String?
  createdAt    DateTime @default(now())

  investment Investment @relation(fields: [investmentId], references: [id], onDelete: Cascade)

  @@index([investmentId])
  @@index([date])
  @@map("inv_transactions")
  @@schema("public")
}

model InvestmentDividend {
  id           String   @id @default(cuid())
  investmentId String
  amount       Float
  date         DateTime @default(now())
  isReinvested Boolean  @default(false)
  notes        String?
  createdAt    DateTime @default(now())

  investment Investment @relation(fields: [investmentId], references: [id], onDelete: Cascade)

  @@index([investmentId])
  @@index([date])
  @@map("inv_dividends")
  @@schema("public")
}

model InvestmentClient {
  id        String   @id @default(cuid())
  userId    String
  name      String
  email     String?
  phone     String?
  notes     String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  investments Investment[]

  @@index([userId])
  @@map("inv_clients")
  @@schema("public")
}


// =====================================
// NEXUS (PROJECT MANAGEMENT) PLUGIN
// =====================================

model NexusProject {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?  @db.Text
  key         String   // e.g., "OS" for Personal OS
  icon        String?
  color       String?
  status      String   @default("active") // active, archived
  position    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  epics    NexusEpic[]
  sprints  NexusSprint[]
  tasks    NexusTask[]
  labels   NexusLabel[]

  @@unique([userId, key])
  @@index([userId])
  @@map("nexus_projects")
  @@schema("public")
}

model NexusEpic {
  id          String   @id @default(cuid())
  projectId   String
  title       String
  description String?  @db.Text
  status      String   @default("todo") // todo, in_progress, done
  startDate   DateTime?
  endDate     DateTime?
  position    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project NexusProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks   NexusTask[]

  @@index([projectId])
  @@map("nexus_epics")
  @@schema("public")
}

model NexusSprint {
  id          String   @id @default(cuid())
  projectId   String
  name        String
  goal        String?
  startDate   DateTime
  endDate     DateTime
  status      String   @default("planned") // planned, active, completed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project NexusProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks   NexusTask[]

  @@index([projectId])
  @@map("nexus_sprints")
  @@schema("public")
}

model NexusTask {
  id          String   @id @default(cuid())
  projectId   String
  epicId      String?
  sprintId    String?
  title       String
  description String?  @db.Text
  status      String   @default("todo") // todo, in_progress, done, blocked, backlog
  priority    String   @default("medium") // low, medium, high, critical
  points      Int?     // Story points
  position    Int      @default(0)
  parentId    String?  // For subtasks
  dueDate     DateTime?
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project NexusProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  epic    NexusEpic?   @relation(fields: [epicId], references: [id], onDelete: SetNull)
  sprint  NexusSprint? @relation(fields: [sprintId], references: [id], onDelete: SetNull)
  
  parent  NexusTask?   @relation("NexusSubtasks", fields: [parentId], references: [id], onDelete: SetNull)
  subtasks NexusTask[] @relation("NexusSubtasks")
  
  labels  NexusTaskLabel[]
  comments NexusComment[]
  activity NexusActivity[]

  @@index([projectId])
  @@index([epicId])
  @@index([sprintId])
  @@index([status])
  @@index([parentId])
  @@map("nexus_tasks")
  @@schema("public")
}

model NexusLabel {
  id        String   @id @default(cuid())
  projectId String
  name      String
  color     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project NexusProject @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks   NexusTaskLabel[]

  @@index([projectId])
  @@map("nexus_labels")
  @@schema("public")
}

model NexusTaskLabel {
  taskId  String
  labelId String

  task  NexusTask  @relation(fields: [taskId], references: [id], onDelete: Cascade)
  label NexusLabel @relation(fields: [labelId], references: [id], onDelete: Cascade)

  @@id([taskId, labelId])
  @@index([taskId])
  @@index([labelId])
  @@map("nexus_task_labels")
  @@schema("public")
}

model NexusComment {
  id        String   @id @default(cuid())
  taskId    String
  userId    String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  task NexusTask @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId])
  @@map("nexus_comments")
  @@schema("public")
}

model NexusActivity {
  id        String   @id @default(cuid())
  taskId    String
  userId    String
  type      String   // 'status', 'priority', 'assignment', 'comment', 'create'
  content   String   // "changed status to Done"
  createdAt DateTime @default(now())

  task NexusTask @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("nexus_activity")
  @@schema("public")
}

// ==================== FLOW (AUTOMATION) SCHEMA ====================

model Workflow {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  isActive    Boolean  @default(false)
  triggerType String   // e.g. "NEXUS_TASK_COMPLETED", "STORAGE_FILE_UPLOADED"
  
  nodes       WorkflowNode[]
  edges       WorkflowEdge[]
  runs        WorkflowRun[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("workflows")
  @@schema("public")
}

model WorkflowNode {
  id          String   @id @default(cuid())
  workflowId  String
  type        String   // "trigger", "action", "condition"
  label       String
  config      Json     // { "targetStatus": "done", "excludePaths": ["/trash"] }
  positionX   Float
  positionY   Float
  
  workflow    Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  
  @@index([workflowId])
  @@map("workflow_nodes")
  @@schema("public")
}

model WorkflowEdge {
  id          String   @id @default(cuid())
  workflowId  String
  sourceId    String   // ID of source WorkflowNode
  targetId    String   // ID of target WorkflowNode
  
  workflow    Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  
  @@index([workflowId])
  @@map("workflow_edges")
  @@schema("public")
}

model WorkflowRun {
  id          String   @id @default(cuid())
  workflowId  String
  status      String   // "success", "failed", "running"
  triggerData Json?    // Snapshot of the data that triggered this run
  logs        Json?    // Array of execution steps/errors
  startedAt   DateTime @default(now())
  completedAt DateTime?
  
  workflow    Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  
  @@index([workflowId])
  @@map("workflow_runs")
  @@schema("public")
}
