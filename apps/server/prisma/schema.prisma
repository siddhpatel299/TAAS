generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public"]
}

model User {
  id          String   @id @default(cuid())
  telegramId  String   @unique
  username    String?
  firstName   String?
  lastName    String?
  phoneNumber String?
  avatarUrl   String?
  sessionData String?  @db.Text // Encrypted Telegram session
  
  // Client-side encryption - key derivation data
  // The passphrase itself is NEVER stored - only salted hash for verification
  encryptionSalt             String?  @db.Text // Base64 encoded salt for PBKDF2
  encryptionVerificationHash String?  @db.Text // Salted hash for passphrase verification
  encryptionInitialized      Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  files           File[]
  folders         Folder[]
  storageChannels StorageChannel[]
  sharedLinks     SharedLink[]

  @@map("users")
  @@schema("public")
}

model File {
  id                String   @id @default(cuid())
  name              String
  originalName      String
  mimeType          String
  size              BigInt
  telegramFileId    String
  telegramMessageId Int
  channelId         String
  folderId          String?
  userId            String
  isStarred         Boolean  @default(false)
  isTrashed         Boolean  @default(false)
  trashedAt         DateTime?
  isChunked         Boolean  @default(false)
  checksum          String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  folder      Folder?       @relation(fields: [folderId], references: [id], onDelete: SetNull)
  versions    FileVersion[]
  sharedLinks SharedLink[]
  chunks      FileChunk[]

  @@index([userId])
  @@index([folderId])
  @@index([isTrashed])
  @@index([isStarred])
  @@map("files")
  @@schema("public")
}

model FileChunk {
  id                String   @id @default(cuid())
  fileId            String
  chunkIndex        Int
  telegramFileId    String
  telegramMessageId Int
  channelId         String
  size              BigInt
  hash              String?  // SHA-256 hash for integrity verification
  createdAt         DateTime @default(now())

  file File @relation(fields: [fileId], references: [id], onDelete: Cascade)

  @@unique([fileId, chunkIndex])
  @@index([fileId])
  @@map("file_chunks")
  @@schema("public")
}

// Stores encrypted file keys - the key itself is encrypted with user's master key
// Master key is derived from passphrase and NEVER stored
model FileEncryption {
  id               String   @id @default(cuid())
  fileId           String   @unique
  encryptedFileKey String   @db.Text // File key encrypted with user's master key (Base64)
  fileKeyIv        String   @db.Text // IV used to encrypt the file key (Base64)
  originalHash     String   // SHA-256 hash of original unencrypted file
  createdAt        DateTime @default(now())

  @@index([fileId])
  @@map("file_encryptions")
  @@schema("public")
}

model FileVersion {
  id                String   @id @default(cuid())
  fileId            String
  version           Int
  size              BigInt
  telegramFileId    String
  telegramMessageId Int
  channelId         String
  createdAt         DateTime @default(now())

  file File @relation(fields: [fileId], references: [id], onDelete: Cascade)

  @@index([fileId])
  @@map("file_versions")
  @@schema("public")
}

model SharedLink {
  id          String    @id @default(cuid())
  token       String    @unique @default(cuid())
  fileId      String
  userId      String
  expiresAt   DateTime?
  password    String?
  maxDownloads Int?
  downloadCount Int     @default(0)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())

  file File @relation(fields: [fileId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([fileId])
  @@map("shared_links")
  @@schema("public")
}

model Folder {
  id        String   @id @default(cuid())
  name      String
  parentId  String?
  userId    String
  color     String?
  icon      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent   Folder?  @relation("FolderToFolder", fields: [parentId], references: [id], onDelete: Cascade)
  children Folder[] @relation("FolderToFolder")
  files    File[]

  @@index([userId])
  @@index([parentId])
  @@map("folders")
  @@schema("public")
}

model StorageChannel {
  id          String   @id @default(cuid())
  channelId   String
  channelName String
  userId      String
  usedBytes   BigInt   @default(0)
  fileCount   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([channelId, userId])
  @@index([userId])
  @@map("storage_channels")
  @@schema("public")
}

// =====================================
// PLUGIN SYSTEM
// =====================================

model EnabledPlugin {
  id        String   @id @default(cuid())
  userId    String
  pluginId  String   // e.g., "job-tracker", "expense-tracker"
  enabled   Boolean  @default(true)
  settings  Json?    // Plugin-specific settings
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, pluginId])
  @@index([userId])
  @@map("enabled_plugins")
  @@schema("public")
}

// =====================================
// TODO LISTS PLUGIN
// =====================================

model TodoList {
  id        String    @id @default(cuid())
  userId    String
  name      String
  color     String?
  icon      String?
  position  Int       @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  tasks TodoTask[]

  @@index([userId])
  @@map("todo_lists")
  @@schema("public")
}

model TodoTask {
  id           String    @id @default(cuid())
  userId       String
  listId       String?
  title        String
  description  String?   @db.Text
  status       String    @default("todo") // todo, in_progress, done
  priority     String    @default("medium") // low, medium, high, critical
  dueDate      DateTime?
  labels       String[]
  isPinned     Boolean   @default(false)
  position     Int       @default(0)
  completedAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  list TodoList? @relation(fields: [listId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([listId])
  @@index([status])
  @@index([priority])
  @@index([dueDate])
  @@map("todo_tasks")
  @@schema("public")
}

// =====================================
// JOB TRACKER PLUGIN
// =====================================

model JobApplication {
  id             String    @id @default(cuid())
  userId         String
  company        String
  jobTitle       String
  location       String?
  employmentType String?   // full-time, part-time, contract, internship, remote
  salaryMin      Int?
  salaryMax      Int?
  salaryCurrency String?   @default("USD")
  salaryPeriod   String?   @default("year") // hour, month, year
  jobUrl         String?
  jobDescription String?   @db.Text
  status         String    @default("wishlist") // wishlist, applied, interview, offer, rejected, accepted, withdrawn
  priority       String    @default("medium") // low, medium, high
  rating         Int?      // 1-5 stars
  appliedDate    DateTime?
  notes          String?   @db.Text
  source         String?   // linkedin, indeed, company website, referral, etc.
  sourceUrl      String?   // Job posting URL
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  documents JobDocument[]
  tasks     JobTask[]
  referrals JobReferral[]
  activities JobActivity[]

  @@index([userId])
  @@index([status])
  @@index([company])
  @@index([createdAt])
  @@map("jt_applications")
  @@schema("public")
}

model JobDocument {
  id               String   @id @default(cuid())
  jobApplicationId String
  fileId           String   // Reference to TAAS File.id
  documentType     String   // resume, cover_letter, job_description, offer_letter, contract, other
  label            String?  // Custom label
  createdAt        DateTime @default(now())

  jobApplication JobApplication @relation(fields: [jobApplicationId], references: [id], onDelete: Cascade)

  @@index([jobApplicationId])
  @@index([fileId])
  @@map("jt_documents")
  @@schema("public")
}

model JobTask {
  id               String    @id @default(cuid())
  jobApplicationId String
  title            String
  description      String?   @db.Text
  dueDate          DateTime?
  priority         String    @default("medium") // low, medium, high
  status           String    @default("pending") // pending, completed
  completedAt      DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  jobApplication JobApplication @relation(fields: [jobApplicationId], references: [id], onDelete: Cascade)

  @@index([jobApplicationId])
  @@index([dueDate])
  @@index([status])
  @@map("jt_tasks")
  @@schema("public")
}

model JobReferral {
  id               String    @id @default(cuid())
  jobApplicationId String?   // Optional - can be general referral
  userId           String
  name             String
  role             String?
  company          String?
  email            String?
  phone            String?
  linkedinUrl      String?
  messageSent      String?   @db.Text // Message content sent
  messageSentDate  DateTime?
  followUpDate     DateTime?
  status           String    @default("pending") // pending, contacted, responded, archived
  notes            String?   @db.Text
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  jobApplication JobApplication? @relation(fields: [jobApplicationId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([jobApplicationId])
  @@index([status])
  @@map("jt_referrals")
  @@schema("public")
}

model JobActivity {
  id               String   @id @default(cuid())
  jobApplicationId String
  action           String   // created, status_changed, document_added, task_completed, etc.
  description      String
  metadata         Json?    // Additional data like old/new status
  createdAt        DateTime @default(now())

  jobApplication JobApplication @relation(fields: [jobApplicationId], references: [id], onDelete: Cascade)

  @@index([jobApplicationId])
  @@index([createdAt])
  @@map("jt_activities")
  @@schema("public")
}

// =====================================
// EMAIL PATTERN CACHE
// =====================================

model EmailPatternCache {
  id         String   @id @default(cuid())
  domain     String   @unique // Company domain (e.g., google.com)
  pattern    String   // Email pattern (e.g., {first}.{last}@{domain})
  confidence Float    // Confidence score (0-100)
  sampleEmail String? // Example email that confirmed the pattern
  hitCount   Int      @default(1) // Number of times this cache was used
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([domain])
  @@map("email_pattern_cache")
  @@schema("public")
}

// =====================================
// NOTES PLUGIN
// =====================================

model Note {
  id          String    @id @default(cuid())
  userId      String
  folderId    String?
  title       String
  content     String?   @db.Text
  contentJson Json?
  icon        String?
  coverImage  String?
  isPinned    Boolean   @default(false)
  isArchived  Boolean   @default(false)
  isTrashed   Boolean   @default(false)
  trashedAt   DateTime?
  tags        String[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  folder   NoteFolder?   @relation(fields: [folderId], references: [id], onDelete: SetNull)
  versions NoteVersion[]
  shares   NoteShare[]

  @@index([userId])
  @@index([folderId])
  @@index([isPinned])
  @@index([isArchived])
  @@index([isTrashed])
  @@map("nd_notes")
  @@schema("public")
}

model NoteVersion {
  id        String   @id @default(cuid())
  noteId    String
  title     String
  content   String?  @db.Text
  contentJson Json?
  version   Int
  createdAt DateTime @default(now())

  note Note @relation(fields: [noteId], references: [id], onDelete: Cascade)

  @@index([noteId])
  @@map("nd_versions")
  @@schema("public")
}

model NoteFolder {
  id        String   @id @default(cuid())
  userId    String
  parentId  String?
  name      String
  icon      String?
  color     String?
  position  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  parent   NoteFolder?  @relation("NoteFolderToFolder", fields: [parentId], references: [id], onDelete: Cascade)
  children NoteFolder[] @relation("NoteFolderToFolder")
  notes    Note[]

  @@index([userId])
  @@index([parentId])
  @@map("nd_folders")
  @@schema("public")
}

model NoteTemplate {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  content     String?  @db.Text
  contentJson Json?
  icon        String?
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@map("nd_templates")
  @@schema("public")
}

model NoteShare {
  id         String    @id @default(cuid())
  noteId     String
  token      String    @unique @default(cuid())
  password   String?
  expiresAt  DateTime?
  canEdit    Boolean   @default(false)
  viewCount  Int       @default(0)
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())

  note Note @relation(fields: [noteId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([noteId])
  @@map("nd_shares")
  @@schema("public")
}

// =====================================
// INVOICE PLUGIN
// =====================================

model Invoice {
  id            String    @id @default(cuid())
  userId        String
  invoiceNumber String
  clientName    String
  clientEmail   String?
  clientAddress String?   @db.Text
  status        String    @default("draft") // draft, sent, paid, overdue, cancelled
  issueDate     DateTime  @default(now())
  dueDate       DateTime?
  subtotal      Float     @default(0)
  taxRate       Float     @default(0)
  taxAmount     Float     @default(0)
  discount      Float     @default(0)
  total         Float     @default(0)
  currency      String    @default("USD")
  notes         String?   @db.Text
  terms         String?   @db.Text
  paidAt        DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  items    InvoiceItem[]
  payments InvoicePayment[]

  @@index([userId])
  @@index([status])
  @@index([invoiceNumber])
  @@map("inv_invoices")
  @@schema("public")
}

model InvoiceItem {
  id          String   @id @default(cuid())
  invoiceId   String
  description String
  quantity    Float    @default(1)
  unitPrice   Float
  amount      Float
  createdAt   DateTime @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
  @@map("inv_items")
  @@schema("public")
}

model InvoicePayment {
  id        String   @id @default(cuid())
  invoiceId String
  amount    Float
  method    String?
  reference String?
  notes     String?
  paidAt    DateTime @default(now())
  createdAt DateTime @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
  @@map("inv_payments")
  @@schema("public")
}

// =====================================
// PASSWORD VAULT PLUGIN
// =====================================

model PasswordEntry {
  id             String    @id @default(cuid())
  userId         String
  categoryId     String?
  title          String
  username       String?
  encryptedPassword String  @db.Text
  passwordIv     String
  url            String?
  notes          String?   @db.Text
  isFavorite     Boolean   @default(false)
  lastUsedAt     DateTime?
  passwordChangedAt DateTime @default(now())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  category PasswordCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([categoryId])
  @@index([isFavorite])
  @@map("pw_entries")
  @@schema("public")
}

model PasswordCategory {
  id        String   @id @default(cuid())
  userId    String
  name      String
  icon      String?
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  entries PasswordEntry[]

  @@index([userId])
  @@map("pw_categories")
  @@schema("public")
}

model PasswordSecurityEvent {
  id        String   @id @default(cuid())
  userId    String
  eventType String   // login_attempt, password_viewed, password_changed, etc.
  entryId   String?
  ipAddress String?
  userAgent String?
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([eventType])
  @@index([createdAt])
  @@map("pw_security_events")
  @@schema("public")
}

// =====================================
// SUBSCRIPTION TRACKER PLUGIN
// =====================================

model Subscription {
  id              String    @id @default(cuid())
  userId          String
  name            String
  description     String?
  amount          Float
  currency        String    @default("USD")
  billingCycle    String    @default("monthly") // monthly, yearly, weekly, quarterly
  category        String?
  startDate       DateTime  @default(now())
  nextBillingDate DateTime?
  reminderDays    Int       @default(3)
  isActive        Boolean   @default(true)
  autoRenew       Boolean   @default(true)
  website         String?
  notes           String?   @db.Text
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  payments SubscriptionPayment[]

  @@index([userId])
  @@index([isActive])
  @@index([nextBillingDate])
  @@map("sub_subscriptions")
  @@schema("public")
}

model SubscriptionPayment {
  id             String   @id @default(cuid())
  subscriptionId String
  amount         Float
  paidAt         DateTime @default(now())
  method         String?
  notes          String?
  createdAt      DateTime @default(now())

  subscription Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  @@index([subscriptionId])
  @@map("sub_payments")
  @@schema("public")
}

// =====================================
// BILL TRACKER PLUGIN
// =====================================

model Bill {
  id          String    @id @default(cuid())
  userId      String
  name        String
  description String?
  amount      Float
  currency    String    @default("USD")
  category    String?
  dueDate     DateTime
  isPaid      Boolean   @default(false)
  paidAt      DateTime?
  isRecurring Boolean   @default(false)
  recurringInterval String? // monthly, yearly, weekly
  reminderDays Int      @default(3)
  notes       String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
  @@index([isPaid])
  @@index([dueDate])
  @@map("bill_bills")
  @@schema("public")
}

// =====================================
// INVESTMENT TRACKER PLUGIN
// =====================================

model Investment {
  id            String    @id @default(cuid())
  userId        String
  clientId      String?
  name          String
  type          String    // stocks, bonds, mutual_funds, crypto, real_estate, etc.
  symbol        String?
  quantity      Float     @default(0)
  purchasePrice Float
  currentPrice  Float?
  purchaseDate  DateTime  @default(now())
  notes         String?   @db.Text
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  client InvestmentClient? @relation(fields: [clientId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([clientId])
  @@index([type])
  @@map("inv_investments")
  @@schema("public")
}

model InvestmentClient {
  id        String   @id @default(cuid())
  userId    String
  name      String
  email     String?
  phone     String?
  notes     String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  investments Investment[]

  @@index([userId])
  @@map("inv_clients")
  @@schema("public")
}

