generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  telegramId  String   @unique
  username    String?
  firstName   String?
  lastName    String?
  phoneNumber String?
  avatarUrl   String?
  sessionData String?  @db.Text // Encrypted Telegram session
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  files           File[]
  folders         Folder[]
  storageChannels StorageChannel[]

  @@map("users")
}

model File {
  id                String   @id @default(cuid())
  name              String
  originalName      String
  mimeType          String
  size              BigInt
  telegramFileId    String
  telegramMessageId Int
  channelId         String
  folderId          String?
  userId            String
  isStarred         Boolean  @default(false)
  isTrashed         Boolean  @default(false)
  trashedAt         DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  folder Folder? @relation(fields: [folderId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([folderId])
  @@index([isTrashed])
  @@index([isStarred])
  @@map("files")
}

model Folder {
  id        String   @id @default(cuid())
  name      String
  parentId  String?
  userId    String
  color     String?
  icon      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent   Folder?  @relation("FolderToFolder", fields: [parentId], references: [id], onDelete: Cascade)
  children Folder[] @relation("FolderToFolder")
  files    File[]

  @@index([userId])
  @@index([parentId])
  @@map("folders")
}

model StorageChannel {
  id          String   @id @default(cuid())
  channelId   String
  channelName String
  userId      String
  usedBytes   BigInt   @default(0)
  fileCount   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([channelId, userId])
  @@index([userId])
  @@map("storage_channels")
}
