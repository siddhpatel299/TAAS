// =====================================
// NOTES & DOCUMENTS PLUGIN
// =====================================

model Note {
  id          String    @id @default(cuid())
  userId      String
  title       String
  content     String?   @db.Text // Markdown content (legacy)
  contentHtml String?   @db.Text // Rendered HTML (legacy)
  folderId    String?
  isPinned    Boolean   @default(false)
  isFavorite  Boolean   @default(false)
  isArchived  Boolean   @default(false)
  isTrashed   Boolean   @default(false)
  trashedAt   DateTime?
  color       String?   // Note color theme
  icon        String?   // Custom icon
  coverImage  String?   // Cover image URL
  tags        String[]
  wordCount   Int       @default(0)
  readingTime Int       @default(0) // Minutes
  lastEditedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  folder   NoteFolder?  @relation(fields: [folderId], references: [id], onDelete: SetNull)
  blocks   NoteBlock[]
  versions NoteVersion[]
  shares   NoteShare[]

  @@index([userId])
  @@index([folderId])
  @@index([isPinned])
  @@index([isFavorite])
  @@index([isArchived])
  @@index([isTrashed])
  @@index([title])
  @@index([createdAt])
  @@map("nd_notes")
  @@schema("public")
}

model NoteFolder {
  id        String   @id @default(cuid())
  userId    String
  name      String
  parentId  String?
  color     String?
  icon      String?
  position  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  parent   NoteFolder?  @relation("NoteFolderToNoteFolder", fields: [parentId], references: [id], onDelete: SetNull)
  children NoteFolder[] @relation("NoteFolderToNoteFolder")
  notes    Note[]

  @@index([userId])
  @@index([parentId])
  @@map("nd_folders")
  @@schema("public")
}

model NoteVersion {
  id          String   @id @default(cuid())
  noteId      String
  title       String
  content     String?  @db.Text
  contentHtml String?  @db.Text
  version     Int
  createdAt   DateTime @default(now())

  note Note @relation(fields: [noteId], references: [id], onDelete: Cascade)

  @@index([noteId])
  @@index([version])
  @@map("nd_versions")
  @@schema("public")
}

model NoteTemplate {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  content     String?  @db.Text
  contentHtml String?  @db.Text
  category    String?
  icon        String?
  isDefault   Boolean  @default(false)
  usageCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([category])
  @@map("nd_templates")
  @@schema("public")
}

model NoteShare {
  id        String    @id @default(cuid())
  noteId    String
  userId    String
  token     String    @unique @default(cuid())
  isPublic  Boolean   @default(false)
  allowEdit Boolean   @default(false)
  password  String?
  expiresAt DateTime?
  viewCount Int       @default(0)
  createdAt DateTime  @default(now())

  note Note @relation(fields: [noteId], references: [id], onDelete: Cascade)

  @@index([noteId])
  @@index([token])
  @@map("nd_shares")
  @@schema("public")
}

// =====================================
// BLOCKS SYSTEM
// =====================================

model NoteBlock {
  id          String   @id @default(cuid())
  noteId      String
  type        String   // text, heading_1, heading_2, heading_3, bullet_list, numbered_list, todo, quote, code, callout, bookmark, embed, column, synced_block, etc.
  content     String?  @db.Text // JSON content based on block type
  position    Int      // Order within the note
  parentId    String?  // For nested blocks
  properties  String?  @db.Text // JSON for block-specific properties (colors, styles, etc.)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  note     Note          @relation(fields: [noteId], references: [id], onDelete: Cascade)
  parent   NoteBlock?    @relation("BlockToBlock", fields: [parentId], references: [id], onDelete: Cascade)
  children NoteBlock[]   @relation("BlockToBlock")
  relations BlockRelation[] @relation("BlockToRelations")
  targetRelations BlockRelation[] @relation("BlockToTargetRelations")

  @@index([noteId])
  @@index([type])
  @@index([position])
  @@index([parentId])
  @@map("nd_blocks")
  @@schema("public")
}

model BlockRelation {
  id            String   @id @default(cuid())
  sourceBlockId String
  targetBlockId String
  type          String   // reference, sync, embed
  properties    String?  @db.Text // JSON for relation properties
  createdAt     DateTime @default(now())

  sourceBlock NoteBlock @relation("BlockToRelations", fields: [sourceBlockId], references: [id], onDelete: Cascade)
  targetBlock NoteBlock @relation("BlockToTargetRelations", fields: [targetBlockId], references: [id], onDelete: Cascade)

  @@index([sourceBlockId])
  @@index([targetBlockId])
  @@map("nd_block_relations")
  @@schema("public")
}

model BlockTemplate {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  blockType   String
  content     String?  @db.Text // JSON template content
  properties  String?  @db.Text // JSON for template properties
  isDefault   Boolean  @default(false)
  usageCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([blockType])
  @@map("nd_block_templates")
  @@schema("public")
}

