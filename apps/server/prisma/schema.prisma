// =====================================
// JOB TRACKER PLUGIN
// =====================================

model JobApplication {
  id             String    @id @default(cuid())
  userId         String
  company        String
  jobTitle       String
  location       String?
  employmentType String?   // full-time, part-time, contract, internship, remote
  salaryMin      Int?
  salaryMax      Int?
  salaryCurrency String?   @default("USD")
  salaryPeriod   String?   @default("year") // hour, month, year
  jobUrl         String?
  jobDescription String?   @db.Text
  status         String    @default("wishlist") // wishlist, applied, interview, offer, rejected, accepted, withdrawn
  priority       String    @default("medium") // low, medium, high
  rating         Int?      // 1-5 stars
  appliedDate    DateTime?
  notes          String?   @db.Text
  source         String?   // linkedin, indeed, company website, referral, etc.
  sourceUrl      String?   // Job posting URL
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  documents  JobDocument[]
  tasks      JobTask[]
  referrals  JobReferral[]
  activities JobActivity[]
  sentEmails SentEmail[]

  @@index([userId])
  @@index([status])
  @@index([company])
  @@index([createdAt])
  @@map("jt_applications")
  @@schema("public")
}

model JobDocument {
  id               String   @id @default(cuid())
  jobApplicationId String
  fileId           String   // Reference to TAAS File.id
  documentType     String   // resume, cover_letter, job_description, offer_letter, contract, other
  label            String?  // Custom label
  createdAt        DateTime @default(now())

  jobApplication JobApplication @relation(fields: [jobApplicationId], references: [id], onDelete: Cascade)

  @@index([jobApplicationId])
  @@index([fileId])
  @@map("jt_documents")
  @@schema("public")
}

model JobTask {
  id               String    @id @default(cuid())
  jobApplicationId String
  title            String
  description      String?   @db.Text
  dueDate          DateTime?
  priority         String    @default("medium") // low, medium, high
  status           String    @default("pending") // pending, completed
  completedAt      DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  jobApplication JobApplication @relation(fields: [jobApplicationId], references: [id], onDelete: Cascade)

  @@index([jobApplicationId])
  @@index([dueDate])
  @@index([status])
  @@map("jt_tasks")
  @@schema("public")
}

model JobReferral {
  id               String    @id @default(cuid())
  jobApplicationId String?   // Optional - can be general referral
  userId           String
  name             String
  role             String?
  company          String?
  email            String?
  phone            String?
  linkedinUrl      String?
  messageSent      String?   @db.Text // Message content sent
  messageSentDate  DateTime?
  followUpDate     DateTime?
  status           String    @default("pending") // pending, contacted, responded, archived
  notes            String?   @db.Text
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  jobApplication JobApplication? @relation(fields: [jobApplicationId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([jobApplicationId])
  @@index([status])
  @@map("jt_referrals")
  @@schema("public")
}

model JobActivity {
  id               String   @id @default(cuid())
  jobApplicationId String
  action           String   // created, status_changed, document_added, task_completed, etc.
  description      String
  metadata         Json?    // Additional data like old/new status
  createdAt        DateTime @default(now())

  jobApplication JobApplication @relation(fields: [jobApplicationId], references: [id], onDelete: Cascade)

  @@index([jobApplicationId])
  @@index([createdAt])
  @@map("jt_activities")
  @@schema("public")
}

// =====================================
// EMAIL PATTERN CACHE
// =====================================

model EmailPatternCache {
  id         String   @id @default(cuid())
  domain     String   @unique // Company domain (e.g., google.com)
  pattern    String   // Email pattern (e.g., {first}.{last}@{domain})
  confidence Float    // Confidence score (0-100)
  sampleEmail String? // Example email that confirmed the pattern
  hitCount   Int      @default(1) // Number of times this cache was used
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([domain])
  @@map("email_pattern_cache")
  @@schema("public")
}

// =====================================
// SENT EMAILS TRACKING
// =====================================

model SentEmail {
  id               String    @id @default(cuid())
  userId           String
  jobApplicationId String?   // Optional - link to job application
  
  // Recipient info
  recipientName    String
  recipientEmail   String
  recipientPosition String?
  company          String
  
  // Email content
  subject          String
  body             String    @db.Text
  
  // Status tracking (manual - no tracking pixels)
  status           String    @default("sent") // sent, replied, meeting_scheduled, not_interested, no_response
  
  // Gmail reference (for potential future Gmail API integration)
  gmailMessageId   String?
  gmailThreadId    String?
  
  // Follow-up tracking
  followUpDate     DateTime?
  followedUp       Boolean   @default(false)
  followUpCount    Int       @default(0)
  lastFollowUpAt   DateTime?
  
  // Notes
  notes            String?   @db.Text
  
  sentAt           DateTime  @default(now())
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  jobApplication JobApplication? @relation(fields: [jobApplicationId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([jobApplicationId])
  @@index([recipientEmail])
  @@index([company])
  @@index([status])
  @@index([followUpDate])
  @@index([sentAt])
  @@map("jt_sent_emails")
  @@schema("public")
}

// =====================================
// NOTES PLUGIN
// =====================================

model Note {
  id           String    @id @default(cuid())
  userId       String
  folderId     String?
  parentNoteId String?   // For nested pages - parent note reference
  title        String
  content      String?   @db.Text  // Plain text for search indexing
  contentJson  Json?               // Tiptap JSON document
  contentHtml  String?   @db.Text  // Rendered HTML for sharing
  icon         String?             // Emoji or icon identifier
  coverImage   String?             // URL or Telegram file ID
  color        String?             // Background color
  metadata     Json?               // Flexible: { status, priority, dueDate, custom fields }
  isPinned     Boolean   @default(false)
  isFavorite   Boolean   @default(false)
  isArchived   Boolean   @default(false)
  isTrashed    Boolean   @default(false)
  trashedAt    DateTime?
  wordCount    Int       @default(0)
  readingTime  Int       @default(0)  // In minutes
  lastEditedAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  folder     NoteFolder?      @relation(fields: [folderId], references: [id], onDelete: SetNull)
  parentNote Note?            @relation("NoteToNote", fields: [parentNoteId], references: [id], onDelete: Cascade)
  childNotes Note[]           @relation("NoteToNote")
  versions   NoteVersion[]
  shares     NoteShare[]
  noteTags   NoteTagsOnNotes[]

  @@index([userId])
  @@index([folderId])
  @@index([parentNoteId])
  @@index([isPinned])
  @@index([isFavorite])
  @@index([isArchived])
  @@index([isTrashed])
  @@index([lastEditedAt])
  @@map("nd_notes")
  @@schema("public")
}

model NoteVersion {
  id          String   @id @default(cuid())
  noteId      String
  title       String
  content     String?  @db.Text
  contentJson Json?
  contentHtml String?  @db.Text
  version     Int
  createdAt   DateTime @default(now())

  note Note @relation(fields: [noteId], references: [id], onDelete: Cascade)

  @@index([noteId])
  @@map("nd_versions")
  @@schema("public")
}

model NoteFolder {
  id        String   @id @default(cuid())
  userId    String
  parentId  String?
  name      String
  icon      String?
  color     String?
  position  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  parent   NoteFolder?  @relation("NoteFolderToFolder", fields: [parentId], references: [id], onDelete: Cascade)
  children NoteFolder[] @relation("NoteFolderToFolder")
  notes    Note[]

  @@index([userId])
  @@index([parentId])
  @@map("nd_folders")
  @@schema("public")
}

model NoteTemplate {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  content     String?  @db.Text
  contentJson Json?
  contentHtml String?  @db.Text
  icon        String?
  isPublic    Boolean  @default(false)
  isDefault   Boolean  @default(false)
  usageCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([isDefault])
  @@index([usageCount])
  @@map("nd_templates")
  @@schema("public")
}

model NoteShare {
  id         String    @id @default(cuid())
  userId     String
  noteId     String
  token      String    @unique @default(cuid())
  password   String?
  expiresAt  DateTime?
  canEdit    Boolean   @default(false)
  allowEdit  Boolean   @default(false)
  isPublic   Boolean   @default(false)
  viewCount  Int       @default(0)
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())

  note Note @relation(fields: [noteId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([noteId])
  @@map("nd_shares")
  @@schema("public")
}

// Global Tags for Notes (user-defined, reusable)
model NoteTag {
  id        String   @id @default(cuid())
  userId    String
  name      String
  color     String?  // Hex color for tag pill
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  notes NoteTagsOnNotes[]

  @@unique([userId, name])
  @@index([userId])
  @@map("nd_tags")
  @@schema("public")
}

// Many-to-Many join table for Notes <-> Tags
model NoteTagsOnNotes {
  noteId    String
  tagId     String
  createdAt DateTime @default(now())

  note Note    @relation(fields: [noteId], references: [id], onDelete: Cascade)
  tag  NoteTag @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([noteId, tagId])
  @@index([noteId])
  @@index([tagId])
  @@map("nd_notes_tags")
  @@schema("public")
}

