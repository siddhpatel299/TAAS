{
  "name": "taas",
  "version": "1.0.0",
  "description": "Telegram As A Storage - Cloud storage powered by Telegram",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "db:generate": "pnpm --filter @taas/server exec prisma generate",
    "db:push": "pnpm --filter @taas/server exec prisma db push",
    "db:studio": "pnpm --filter @taas/server exec prisma studio",
    "postinstall": "bash scripts/patch-telegram.sh"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=18.0.0"
  }
}